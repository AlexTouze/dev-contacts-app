extends ../node_modules/jade-bootstrap/_bootstrap
append styles
	// Bootstrap theme
	+bootswatch("cerulean")
	// Custom styles for this template
	link(href='../css/theme.css', rel='stylesheet')
	// Custom styles for this template
	link(href='../css/navbar-fixed-top.css', rel='stylesheet')
	link(href='../css/style.css', rel='stylesheet')
	script(src='http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js')
append scripts
	//script(src='../javascripts/require.js')
	script(src='../javascripts/load.js')
	script(src='../javascripts/loadRuntime.js')
	script(src='../javascripts/contact.js')
	script(src='../javascripts/loadWebRTC.js')
	script(src='../javascripts/loadConnector.js')
	script(src='#{domain}.well-known/runtime/rethink.js')
	//script(src='#{domain}/dist/rethink.js')
append body
	// Fixed navbar
	nav.navbar.navbar-default.navbar-fixed-top
		.container
			.navbar-header
				button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
					span.sr-only Toggle navigation
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a.navbar-brand(href='#')!= title
			#navbar.navbar-collapse.collapse
				ul.nav.navbar-nav
					li.active
						a(href='/home') Home
					li
						a(href='home/profile') Profile
	.container
		.row 
			.col-sm-4
				h2 Current Contact
				ul.list-group
					li.list-group-item 
						span First Name: 
						span(id="userFirstName")
					li.list-group-item 
						span Last Name: 
						span(id="userLastName")
					li.list-group-item 
						span Age: 
						span(id="userAge")
					li.list-group-item
						span Guid: 
						span(id="userGuid") 
					li.list-group-item
						span Mail: 
						span(id="userMail")
			.col-sm-8#addUser
				form.form-signin
					h2.form-signin-heading Add Contact
						label.sr-only(for='inputFirstName') First Name
						input#inputFirstName.form-control(type='text', placeholder='First Name', required='true')
						label.sr-only(for='inputLastName') Last Name
						input#inputLastName.form-control(type='text', placeholder='Last Name', required='true')
						label.sr-only(for='inputAge') Last Name
						input#inputAge.form-control(type='text', placeholder='Age', required='true')
						label.sr-only(for='inputEmail') Email address
						input#inputEmail.form-control(type='email', placeholder='Email address', required='true', autofocus='')
						input.btn.btn-lg.btn-primary.btn-block.addContact(type='button', value='Add Contact')
		.row 
			.col-sm-12
				h2 Contacts List
				#userList
					table(class="table table-striped")
						thead
							tr
								th UserName
								th Email
								th Age
								th Contact Info
								th Delete?
								th Call
						tbody
		.row.videoSection.hide
			.col-sm-12
				video.video.responsive-video(autoplay)
				video.my-video.responsive-video(muted autoplay) 
				div
					button.camera.waves-effect.waves-light.btn(data-text-swap="videocam_on" data-text-original="videocam_off")
						i.material-icons.left videocam_off
					button.mute.waves-effect.waves-light.btn(data-text-swap="volume_on" data-text-original="volume_off")
						i.material-icons.left volume_off
					button.mic.waves-effect.waves-light.btn(data-text-swap="mic_on" data-text-original="mic_off")
						i.material-icons.left mic_off
					button.hangout.waves-effect.waves-light.btn
						i.material-icons.left call_end
		.modal.fade#inComingCall
			.modal-dialog(role="document")
				.modal-content
					.modal-header
						button.close(type="button" data-dismiss="modal" aria-label="Close")
							span(aria-hidden="true") &times;
						h4.modal-title In Coming Call
					.modal-body
						.col-lg-4
							img(src="" alt="" id="avatar").col-lg-12.circle
						.col-lg-8
							.col-lg-12
								span.text-right Name: 
								span(id="calleeName").black-text
							.col-lg-12
								span.text-right Email:
								span(id="calleeUsername").black-text
							.col-lg-12
								span.text-right Locale: 
								span(id="calleLocale").black-text
							.col-lg-12
								span.text-right UserURL: 
								span(id="calleUserURL").black-text
					.modal-footer
						button(type="button" class="btn btn-secondary" data-dismiss="modal" id="rejectedCall") Reject
						button(type="button" class="btn btn-primary" id="acceptedCall" data-dismiss="modal") Accept
