extends ../node_modules/jade-bootstrap/_bootstrap
append script
	script(src='/javascripts/contact.js')
append styles
	// Bootstrap theme
	+bootswatch("cerulean")
	// Custom styles for this template
	link(href='../css/theme.css', rel='stylesheet')
append body
	.container
		.page-header
		h1 Contact App
		.row 
			.col-sm-4
				h2 Current Contact
				ul.list-group
					li.list-group-item 
						span First Name: 
						span(id="userFirstName")
					li.list-group-item 
						span Last Name: 
						span(id="userLastName")
					li.list-group-item 
						span Age: 
						span(id="userAge")
					li.list-group-item
						span Guid: 
						span(id="userGuid") 
					li.list-group-item
						span Mail: 
						span(id="userMail")
			.col-sm-8#addUser
				form.form-signin
					h2.form-signin-heading Add Contact
						label.sr-only(for='inputFirstName') First Name
						input#inputFirstName.form-control(type='text', placeholder='First Name', required='true')
						label.sr-only(for='inputLastName') Last Name
						input#inputLastName.form-control(type='text', placeholder='Last Name', required='true')
						label.sr-only(for='inputAge') Last Name
						input#inputAge.form-control(type='text', placeholder='Age', required='true')
						label.sr-only(for='inputEmail') Email address
						input#inputEmail.form-control(type='email', placeholder='Email address', required='true', autofocus='')
						label.sr-only(for='inputGuid') Password
						input#inputGuid.form-control(type='text', placeholder='Guid', required='true')
						button.btn.btn-lg.btn-primary.btn-block(type='submit' onclick='addContact()') addContact
		.row 
			.col-sm-12
				h2 Contacts List
				#userList
					table(class="table table-striped")
						thead
							tr
								th UserName
								th Email
								th Guid
								th Age
								th Contact Info
								th Delete?
						tbody